{
  "name": "collection-pipeline-rest-scaffold",
  "version": "0.0.1",
  "description": "A scaffold for building a NodeJS REST service using the Collection Pipeline pattern.",
  "author": "bjvickers",
  "license": "MIT",
  "homepage": "https://github.com/bjvickers/collection-pipeline-rest-scaffold#README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/bjvickers/collection-pipeline-rest-scaffold"
  },
  "bugs": {
    "url": "https://github.com/bjvickers/collection-pipeline-rest-scaffold/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --quiet -E HUSKY_GIT_PARAMS || (node ./scripts/notice.commits.js && exit 1)",
      "pre-push": "npm run build && npm run qc"
    }
  },
  "scripts": {
    "build": "npm run build:transpile && npm run build:copy-static-assets",
    "build:transpile": "node ./scripts/task.transpile.js",
    "build:copy-static-assets": "node ./scripts/task.copy-static-assets.js",
    "qc": "npm run qc:check && npm run qc:test && npm run qc:report",
    "qc:check": "node ./scripts/taskset.checks.js",
    "qc:check:code-style": "tslint --config tslint.json \"src/**/*.ts\"",
    "qc:check:credential-leaks": "check-for-leaks .",
    "qc:check:unused-packages": "depcheck . --ignore-dirs=dist,node_modules --ignores=\"@commitlint/*,@types/*,husky,nodemon,tslint-config-security,reflect-metadata,ts-node,pm2\"",
    "qc:test": "node ./scripts/taskset.tests.js",
    "qc:test:unit": "echo 'no unit tests yet' && exit 0",
    "qc:test:api": "ts-mocha ./test/api/*.ts",
    "qc:test:feature": "echo 'no feature tests yet' && exit 0",
    "qc:report": "node ./scripts/taskset.reports.js",
    "qc:report:complexity": "plato -r -q -d reports/complexity -x .js.map dist",
    "qc:report:reminders": "leasot --exit-nicely --reporter markdown --ignore node_modules src/**/*.ts | marked -s > ./reports/reminders/index.html",
    "start:reload": "concurrently --prefix \"[{name}]\" --kill-others --prefix-colors \"yellow.bold,cyan.bold\" \"npm:watch-ts\" \"nodemon ./dist/bin/start.js\"",
    "start:reload:debug": "concurrently --prefix \"[{name}]\" --kill-others --prefix-colors \"yellow.bold,cyan.bold\" \"npm:watch-ts\" \"nodemon --inspect=0.0.0.0:9229 ./dist/bin/start.js\"",
    "start": "pm2 start ./dist/bin/start.js -i \"max\" -- --production",
    "fix-code-style": "tslint --fix --config tslint.json \"src/**/*.ts\"",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "awilix": "^4.0.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "helmet": "^3.14.0",
    "meld": "^1.3.2",
    "pino": "^5.8.0",
    "pm2": "^3.2.2",
    "reflect-metadata": "^0.1.12",
    "swagger-express-middleware": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/pino": "^5.8.0",
    "@types/swagger-express-middleware": "^1.0.8",
    "chakram": "^1.5.0",
    "chalk": "^2.4.1",
    "check-for-leaks": "^1.2.0",
    "concurrently": "*",
    "depcheck": "^0.6.11",
    "execa": "^1.0.0",
    "express": "^4.16.4",
    "husky": "*",
    "leasot": "^6.6.2",
    "listr": "^0.14.2",
    "marked": "^0.5.1",
    "mocha": "^5.2.0",
    "nodemon": "*",
    "plato": "^1.7.0",
    "ts-mocha": "^2.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-security": "^1.12.0",
    "typescript": "^3.1.5"
  }
}
