{
  "name": "collection-pipeline-rest-scaffold",
  "version": "0.0.1",
  "description": "A scaffold for building a NodeJS REST service using the Collection Pipeline pattern.",
  "author": "bjvickers",
  "license": "MIT",
  "homepage": "https://github.com/bjvickers/collection-pipeline-rest-scaffold#README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/bjvickers/collection-pipeline-rest-scaffold"
  },
  "bugs": {
    "url": "https://github.com/bjvickers/collection-pipeline-rest-scaffold/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --quiet -E HUSKY_GIT_PARAMS || (node ./scripts/notice.commits.js && exit 1)",
      "pre-push": "npm run build && npm run check && npm test"
    }
  },
  "scripts": {
    "build": "node ./scripts/taskset.build.js",
    "build:transpile": "node ./scripts/task.transpile.js",
    "build:copy-static-assets": "node ./scripts/task.copy-static-assets.js",
    "qc": "npm run check && npm test && npm run analyse",
    "check": "node ./scripts/taskset.checks.js",
    "check:code-style": "tslint --config tslint.json \"src/**/*.ts\"",
    "check:credential-leaks": "check-for-leaks .",
    "check:unused-packages": "depcheck . --ignore-dirs=dist,node_modules --ignores=\"@commitlint/*,@types/*,husky,nodemon,tslint-config-security\"",
    "test": "node ./scripts/taskset.tests.js",
    "test:unit": "echo 'no unit tests yet' && exit 0",
    "test:feature": "echo 'no feature tests yet' && exit 0",
    "analyse": "node ./scripts/taskset.analysis.js",
    "analyse:complexity": "echo 'not yet analysing complexity' && exit 0; #exitzero cr ./dist/ | marked -s > ./reports/complexity.html",
    "analyse:reminders": "exitzero leasot --reporter markdown --ignore node_modules src/ | marked -s > ./reports/reminders.html",
    "start:basic": "concurrently --prefix \"[{name}]\" --kill-others --prefix-colors \"yellow.bold,cyan.bold\" \"npm:watch-ts\" \"nodemon ./dist/bin/start.js\"",
    "start:debug": "concurrently --prefix \"[{name}]\" --kill-others --prefix-colors \"yellow.bold,cyan.bold\" \"npm:watch-ts\" \"nodemon --inspect-brk=0.0.0.0:9229 ./dist/bin/start.js\"",
    "start": "pm2 start ./dist/bin/start.js -i \"max\" -- --production",
    "fix-code-style": "tslint --fix --config tslint.json \"src/**/*.ts\"",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "awilix": "^4.0.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "helmet": "^3.14.0",
    "inversify": "^5.0.1",
    "pm2": "^3.2.2",
    "reflect-metadata": "^0.1.12",
    "swagger-express-middleware": "^1.1.1",
    "ts-log-class": "^1.0.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.6",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/supertest": "^2.0.6",
    "@types/swagger-express-middleware": "^1.0.8",
    "chai": "^4.2.0",
    "chalk": "^2.4.1",
    "check-for-leaks": "^1.2.0",
    "concurrently": "*",
    "depcheck": "^0.6.11",
    "execa": "^1.0.0",
    "exitzero": "^1.0.1",
    "express": "^4.16.4",
    "husky": "*",
    "leasot": "^6.6.2",
    "listr": "^0.14.2",
    "marked": "^0.5.1",
    "mocha": "^5.2.0",
    "nodemon": "*",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-security": "^1.12.0",
    "typescript": "^3.1.3"
  }
}
